    <View android:layout_below="@+id/amountName1"
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:layout_marginTop="5dp"
        android:background="#D3D3D3"
        android:id="@+id/view" />



</RelativeLayout>

