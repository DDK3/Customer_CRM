<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="sriyaan.ac.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:background="#FFF">



    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
           android:src="@drawable/iii"

            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A complete AC customer service management "
            android:textColor="#000"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:maxEms="10"
            />


    </LinearLayout>



        <LinearLayout
            android:layout_marginTop="18dp"
            android:layout_below="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_gravity="center"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/customer_list1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:layout_height="150dp">

                    <ImageView
                        android:id="@+id/customer_list"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/pasta"/>

                    <ImageView
                        android:id="@+id/lis2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/group"
                        android:layout_above="@+id/list3"
                        />

                    <TextView
                        android:id="@+id/list3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="Customer List"
                        android:textColor="#FFF"
                        android:textSize="20sp"/>


                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/add_customer1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:layout_height="150dp">

                    <ImageView
                        android:id="@+id/add_customer"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/salad"/>

                    <ImageView
                        android:id="@+id/add2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/add_user"
                        android:layout_above="@+id/add3"
                        />

                    <TextView
                        android:id="@+id/add3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="Add Customer"
                        android:textColor="#FFF"
                        android:textSize="20sp"/>


                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/service_shedule1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:layout_height="150dp">

                    <ImageView
                        android:id="@+id/service_shedule"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/meat"/>

                    <ImageView
                        android:id="@+id/shedule2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/calendar_"
                        android:layout_above="@+id/shedule3"
                        />

                    <TextView
                        android:id="@+id/shedule3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="Service Schedule"
                        android:textColor="#FFF"
                        android:textSize="20sp"/>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/collection1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:layout_height="150dp">

                    <ImageView
                        android:id="@+id/collection"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/fish"/>


                    <TextView
                        android:id="@+id/collection2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="Collection"
                        android:textColor="#FFF"
                        android:textSize="20sp"
                        android:maxEms="1"
                        />

                </RelativeLayout>

            </LinearLayout>



            <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_ad_unit_id">
            </com.google.android.gms.ads.AdView>

